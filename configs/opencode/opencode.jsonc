{
  "$schema": "https://opencode.ai/config.json",
  // Theme configuration
  "autoupdate": true,
  // Tools allowed to be used
  "tools": {
     "write": true,
     "bash": true,
     "edit": true,
     "read": true,
     "grep": true,
     "glob": true,
     "list": true,
     "patch": true,
     "todowrite": true,
     "todoread": true,
     "webfetch": true
  },
  // Mcp servers
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "${CONTEXT7_API_KEY}"
      },
      "enabled": true
    }
  }
}

